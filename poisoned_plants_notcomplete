static int[] plantKiller(int[] arr, int length){

  int temp = arr[0];
  int[] newArr;
  
  for(int i = 0; i< length; i++){
    if(arr[i+1] > arr[i]){
      temp = arr[i+1];
      newArr[i+1] = 0; //No plant here
    }
    else{
      newArr[i+1] = arr[i+1];
    }
  }
}
